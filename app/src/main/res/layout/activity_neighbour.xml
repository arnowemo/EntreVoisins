<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/neighbour_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFDCDCDC"
    android:orientation="horizontal"
    tools:context=".ui.neighbour_list.NeighbourActivity">

  <ImageView
      android:id="@+id/avatarNeighbour"
      android:layout_width="415dp"
      android:layout_height="264dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.0"
      tools:srcCompat="@tools:sample/avatars" />

  <TextView
      android:id="@+id/name_neighbour_avatar"
      android:layout_width="162dp"
      android:layout_height="40dp"
      android:text="Testname1"
      android:textColor="#FFFFFF"
      android:textSize="30sp"
      app:layout_constraintBottom_toBottomOf="@+id/avatarNeighbour"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.064"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/avatarNeighbour"
      app:layout_constraintVertical_bias="0.895" />

  <ImageButton
      android:id="@+id/backButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:background="#00FFFFFF"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.044"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/ic_baseline_arrow_back_24" />

  <android.support.v7.widget.CardView
      android:layout_width="378dp"
      android:layout_height="158dp"
      android:layout_marginTop="8dp"
      app:cardCornerRadius="5dp"
      app:cardElevation="2dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.484"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/avatarNeighbour"
      app:layout_constraintVertical_bias="0.0">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <TextView
          android:id="@+id/name_neighbour"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Testname2"
          android:textColor="#000000"
          android:textSize="24sp"
          app:layout_constraintBottom_toTopOf="@+id/view2"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.062"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintVertical_bias="0.761" />

      <View
          android:id="@+id/view2"
          android:layout_width="wrap_content"
          android:layout_height="0.9dp"
          android:background="#C1CDCACA"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.666"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintVertical_bias="0.312" />

      <ImageView
          android:id="@+id/imageView2"
          android:layout_width="24dp"
          android:layout_height="24dp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.045"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:srcCompat="@drawable/ic_pin" />

      <TextView
          android:id="@+id/address_neighbour"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="TextView"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.075"
          app:layout_constraintStart_toEndOf="@+id/imageView2"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintVertical_bias="0.517" />

      <ImageView
          android:id="@+id/imageView6"
          android:layout_width="24dp"
          android:layout_height="24dp"
          android:layout_marginStart="16dp"
          android:layout_marginBottom="16dp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:srcCompat="@drawable/ic_call" />

      <TextView
          android:id="@+id/phone_neighbour"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="TextView"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.075"
          app:layout_constraintStart_toEndOf="@+id/imageView6"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintVertical_bias="0.884" />

    </android.support.constraint.ConstraintLayout>

  </android.support.v7.widget.CardView>

  <android.support.v7.widget.CardView
      android:layout_width="378dp"
      android:layout_height="140dp"
      android:layout_marginTop="8dp"
      app:cardCornerRadius="5dp"
      app:cardElevation="2dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.484"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/avatarNeighbour"
      app:layout_constraintVertical_bias="0.88">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <TextView
          android:id="@+id/About"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="A propos de moi "
          android:textColor="#000000"
          android:textSize="24sp"
          app:layout_constraintBottom_toBottomOf="@+id/view"
          app:layout_constraintEnd_toEndOf="@+id/view"
          app:layout_constraintHorizontal_bias="0.081"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintVertical_bias="0.592" />

      <View
          android:id="@+id/view"
          android:layout_width="wrap_content"
          android:layout_height="0.9dp"
          android:background="#C1CDCACA"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.0"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintVertical_bias="0.289" />

      <TextView
          android:id="@+id/about_me_neighbour"
          android:layout_width="354dp"
          android:layout_height="85dp"
          android:text="text"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.517"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/view" />

    </android.support.constraint.ConstraintLayout>

  </android.support.v7.widget.CardView>

  <android.support.design.widget.FloatingActionButton
      android:id="@+id/add_favorite"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="248dp"
      android:clickable="true"
      app:backgroundTint="#DFDCDCDC"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.926"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/avatarNeighbour"
      app:layout_constraintVertical_bias="0.0"
      app:srcCompat="@drawable/ic_star_border_white_24dp" />

</android.support.constraint.ConstraintLayout>